<%= simple_form_for ([@task_list, @task_list.task_items.build]) do |f|  %>
	<div class="input-group">
  		<span class="input-group-addon"><i class= "fa fa-plus"></i></span>
		<%= f.input :title, :input_html => {'data-toggle' => "modal", 'data-target' => "#myModal"}, placeholder:"Write task item..." , label:false %>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">Create new Task Item</h4>
	      </div>
	      <div class="modal-body">
	        <%= f.input :title %>
	        <%= f.input :description %>
	        <%= f.text_field :duedate, placeholder:" Set due date...", class: "datepicker", :data => {provide: 'datepicker'} %>
	      </div>
	      <div class="modal-footer">
	        <%= f.button :submit %>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>